<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInsignificantStyle">
        <item name="android:color">@color/colorLightGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="columnHeadText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="StyleDaysButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">3dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="StyleCoinInfoTextView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="StyleHeadingCoinMoreDetails">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="StyleMoreInfoCoinLeft">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>

    <style name="StyleMoreInfoCoinRight">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="StyleRowMoreInfo">
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--Custom Material Buttons Style-->
    <style name="myMaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="myMaterialIconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">

    </style>

    <style name="myMaterialButton" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="myMaterialOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <!--Custom Text / Headings-->
    <style name="myHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mySmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>



    <style name="mySmallerText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="myTinyText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="myMediumText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myBigBoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myBigText">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
