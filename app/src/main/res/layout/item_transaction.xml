<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layout_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_TransactionCoinId"
            style="@style/myMediumBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin" />

        <TextView
            android:id="@+id/text_TransactionTimestamp"
            style="@style/mySmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Jul, 2019" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/text_TransactionValue"
        android:layout_toEndOf="@id/layout_Start"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_TransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="Buy"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_TransactionQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="1.2"
            android:textAlignment="center" />
    </LinearLayout>


    <TextView
        android:id="@+id/text_TransactionValue"
        style="@style/myMediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="+$12,103" />

</RelativeLayout>