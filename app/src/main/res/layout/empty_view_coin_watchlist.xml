<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_EmptyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/ic_error_outline_black_24dp"
        android:tint="@color/colorXLightGrey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oops! There was an Error"
        style="@style/myMediumBoldText"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please try again"
        android:textColor="@color/colorGrey"
        style="@style/mySmallText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_EmptyViewRetry"
        style="@style/myMaterialOutlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Try again" />
</LinearLayout>